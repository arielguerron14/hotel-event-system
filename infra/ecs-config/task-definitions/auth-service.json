{
  "family": "auth-service",
  "networkMode": "awsvpc",
  "containerDefinitions": [
    {
      "name": "auth-service",
      "image": "your-dockerhub-username/auth-service:latest",
      "memory": 512,
      "cpu": 256,
      "essential": true,
      "portMappings": [
        {
          "containerPort": 3000,
          "hostPort": 3000
        }
      ]
    }
  ],
  "requiresCompatibilities": ["FARGATE"],
  "cpu": "256",
  "memory": "512",
  "executionRoleArn": "arn:aws:iam::your-account-id:role/ecsTaskExecutionRole"
}
