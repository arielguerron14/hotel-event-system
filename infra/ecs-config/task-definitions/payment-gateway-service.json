{
    "family": "payment-gateway-service",
    "networkMode": "awsvpc",
    "containerDefinitions": [
      {
        "name": "payment-gateway-service",
        "image": "your-dockerhub-username/payment-gateway-service:latest",
        "memory": 512,
        "cpu": 256,
        "essential": true,
        "portMappings": [
          {
            "containerPort": 3017,
            "hostPort": 3017
          }
        ]
      }
    ],
    "requiresCompatibilities": ["FARGATE"],
    "cpu": "256",
    "memory": "512",
    "executionRoleArn": "arn:aws:iam::your-account-id:role/ecsTaskExecutionRole"
  }
  